---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>secure gateway | hihorton</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Secure access gateway for HiHorton services.">

    <!-- JetBrains Mono -->
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: 'JetBrains Mono', monospace;
            background-color: #0f172a;
            color: #e2e8f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
        }

        .container {
            max-width: 600px;
            padding: 40px;
        }

        h1 {
            font-weight: 600;
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .sub {
            color: #64748b;
            margin-bottom: 30px;
        }

        .button {
            display: block;
            background: transparent;
            border: 1px solid #38bdf8;
            color: #38bdf8;
            padding: 14px;
            margin: 12px 0;
            text-decoration: none;
            border-radius: 6px;
            transition: 0.2s ease;
        }

        .button:hover {
            background: #38bdf8;
            color: #0f172a;
        }

        .footer {
            margin-top: 40px;
            font-size: 0.8rem;
            color: #475569;
        }

        .prompt {
            color: #38bdf8;
        }
    </style>
</head>
<body>

<div class="container">
    <h1><span class="prompt">></span> hihorton_gateway</h1>
    <div class="sub">Secure hybrid cloud access node</div>

    <!-- Replace these with your real subdomains -->
    <a class="button" href="/blog">/blog</a>
    <a class="button" href="/projects">/projects</a>
    <a class="button" href="/about">/about</a>
    <a class="button" href="/lab">/lab: RESTRICTED ACCESS</a>

    <div class="footer">
        AWS S3 + CloudFront | Cloudflare Tunnel | On-Prem Infrastructure
    </div>
</div>

</body>
</html>
