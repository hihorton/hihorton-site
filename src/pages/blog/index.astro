---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="blog | hihorton" description="Journal and Documentation to support my journey." />
    <style>
main {
  width: 960px;
  max-width: calc(100% - 2em);
  margin: auto;
  padding: 2em 0;
}

ul {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

ul li {
  display: flex;
}

ul li a {
  display: flex;
  flex-direction: column;
  width: 100%;
  text-decoration: none;
}

/* Uniform image frame */
.thumb {
  width: 100%;
  aspect-ratio: 2 / 1; /* 960x480 = 2:1 */
  overflow: hidden;
  border-radius: 12px;
  margin-bottom: 1rem;
}

.thumb-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Title */
.title {
  margin: 0;
  color: var(--text);
  line-height: 1.2;
  min-height: 3.2rem; /* forces same title space */
}

/* Date */
.date {
  margin-top: 0.5rem;
  color: var(--muted);
  font-size: 0.9rem;
}

/* Hover */
ul li a:hover .title {
  color: var(--accent);
}

@media (max-width: 720px) {
  ul {
    grid-template-columns: 1fr;
  }
}
    </style>
  </head>

  <body>
    <Header />
    <main>
      <section>
        <ul>
          {posts.map((post) => (
            <li>
              <a href={`/blog/${post.id}/`}>
                {post.data.heroImage && (
                  <div class="thumb">
                    <Image
                      src={post.data.heroImage}
                      alt=""
                      class="thumb-img"
                    />
                  </div>
                )}
                <h4 class="title">{post.data.title}</h4>
                <p class="date">
                  <FormattedDate date={post.data.pubDate} />
                </p>
              </a>
            </li>
          ))}
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
