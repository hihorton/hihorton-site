---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav class="nav">
    <div class="nav-left">
      <a href="/" class="logo">HiHorton</a>
    </div>

    <div class="nav-links">
      <HeaderLink href="/">home</HeaderLink>
      <HeaderLink href="/blog">blog</HeaderLink>
      <HeaderLink href="/projects">projects</HeaderLink>
      <HeaderLink href="/about">about</HeaderLink>

    </div>
  </nav>
</header>

<style>
header {
  background: var(--bg);
  border-bottom: 1px solid var(--border);
}

.nav {
  max-width: 900px;
  margin: 0 auto;
  padding: 1rem 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo {
  font-weight: 600;
  font-size: 1rem;
  color: var(--text);
  text-decoration: none;
}

.nav-links {
  display: flex;
  gap: 1.5rem;
}

.nav-links a {
  color: var(--text);
  text-decoration: none;
  opacity: 0.8;
  transition: color 0.15s ease, opacity 0.15s ease;
}

.nav-links a:hover {
  color: var(--accent);
  opacity: 1;
}

.nav-links a.active {
  color: var(--accent);
  opacity: 1;
}
</style>
